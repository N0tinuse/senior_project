!!! 5
html(lang='en')
head
    include header.jade
  body
    .container
      include navbar.jade
      .panel.panel-default
        .panel-heading
          h3 Milestones
        .row
          .col-md-4
            .milestone_div
              h2 Create Milestone
              | ID:
              input#projectid.form-control(type='text', placeholder='1034')
              | Amount:
              input#amount.form-control(type='text')
              | User Name:
              input#tousername.form-control(type='text', placeholder='govindadasu')
              | Reason:
              input#reasontext.form-control(type='text')
              | Reason Type:
              select#reasontype.form-control
                option(value='partial') Partial
                option(value='full') Full
                option(value='other') Other
              br
              button#create_milestone_payment.btn.btn-default.btn-lg(type='button')
                | Create Milestone Payment
          .col-md-8
            .milestone_div
              h2 Milestone List
              table#milestone_list.table.table-hover
                tr
                  th ID
                  th Username
                  th Date
                  th Project ID
                  th
                    | Project Name
                    th Reason
    include footer.jade
    script(src='static/views/js/milestones.js')
