.container
  .panel.panel-default
    .panel-heading
      h3 Mailbox
    .panel-body
      ul#messageTabs.nav.nav-tabs
        li#inboxTab.active
          a(href='#inbox') Inbox
        li
          a#sentTab(href='#sent') Sent
        li
          a(href='#newMessage') New Message
      .tab-content
        #inbox.tab-pane.fade.in.active
          table#inboxMessages.table.table-hover
            tr
              th From
              th Message
              th Project Name (ID)
        #sent.tab-pane.fade
          table#sentMessages.table.table-hover
            tr
              th To
              th Message
              th Project Name (ID)
        #newMessage.tab-pane.fade
          form.newMessageForm
            .form-group
              label To:
              input#to_user_name.form-control(type='text', placeholder='User Name')
            .form-group
              label Project ID Number:
              input#project_id.form-control(type='number', placeholder='Project ID #')
            .form-group
              label Message:
              textarea#message_text.form-control(rows='3', placeholder='Enter Message Here')
            .form-group
              button#sendBtn.btn.btn-lg.btn-default(value='Submit') Send
